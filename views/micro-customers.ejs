<%- include ('layouts/header') %>
<h1 class="table">micro Customer</h1>
<a href="/retailer/register-customer" class="border-shadow">
  <span class="text-gradient">New Customer<i class="fas fa-customer"></i></span>
</a>
<table class="table">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Image</th>
    <th>Start Date of Coverage</th>
    <th>Role</th>
  </thead>
  <tbody>
    <% customers.forEach(customer => { %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <td><img
        src="/uploads/<%= customer.image %>" width="100" class="img-thumbnail"/>
      </td>
      <td><%= customer.startdate %></td>
      <td><%= customer.role %></td>
      
      
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include ('layouts/footer') %>


