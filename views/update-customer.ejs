<%- include('./layouts/header') %>

<h1 class="table"><span class="goback" onclick="window.history.back()">‚Üê</span> Update Customer</h1>
<form
          action="/admin/update-customer"
          method="post"
          class="lg-form"
        >
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user.id %>" />
            <input type="text" name="name" value="<%= user.name %>">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>">
        </div>
        <div class="form-group">
            <label for="image" class="text-light">Image</label>
            <td><img
                src="/uploads/<%= user.image %>" width="100" class="img-thumbnail"/>
            </td>
            <input type="file" name="image" value="/uploads/<%= user.image %>">
        </div>
        <div class="form-group">
            <label for="startdate" class="text-light">Date</label>
            <input type="date" name="startdate" value="<%= user.startdate %>">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="text" name="password" value="<%= user.password %>">
        </div>
        <div class="form-group">
            <input type="submit" value="update" >
        </div>

</form>
<%- include('./layouts/footer') %>