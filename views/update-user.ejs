<%- include('./layouts/header') %>

<h1 class="table"><span class="goback" onclick="window.history.back()">‚Üê</span> Update User</h1>
<form
          action="/admin/update-user"
          method="post"
          class="lg-form"
        >
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user.id %>" />
            <input type="text" name="name" value="<%= user.name %>">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>">
        </div>
        <div class="form-group">
            <label for="phone" class="text-light">Phone Number</label>
            <input type="phone" name="phone" value="<%= user.phone%>">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="<%= user.address %>">
        </div>
        
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="text" name="password" value="<%= user.password %>">
        </div>
            <label for="role" class="text-light">Role</label>
            <select name="role" id="role">
                <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %> >Admin</option>
                <option value="RETAILER" <%= user.role === 'RETAILER' ? 'selected' : '' %>>Retailer</option>
                <option value="CLIENT" <%= user.role === 'CLIENT' ? 'selected' : '' %>>Client</option>
            </select>

        <div class="form-group">
            <input type="submit" value="update" >
        </div>

</form>
<%- include('./layouts/footer') %>